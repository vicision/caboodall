<h1>Add an item to your Caboodall</h1>
<form action="/items" method="POST">
  <label>Enter item name/title:</label>
  <input type="text" name="title" id="title">
  <br></br>
  <label>Enter or choose creator:</label>
  <input type="text" name="creator" id="creator"></input>
  <br></br>
  <%Creator.all.each do |creator|%>
    <input type="checkbox" name="creators[]" id="<%= creator.name %>" value="<%=creator.id%>"><%=creator.name%></input>
  <%end%>
  <br></br>
  <label>Enter or choose type:</label>
  <input type="text" name="type" id="type" placeholder="Create new type"></input>
  <br></br>
  <%Type.all.each do |type|%>
    <input type="checkbox" name="types[]" id="<%= type.name %>" value="<%=type.id%>"><%=type.name%></input>
  <%end%>
  <br></br>
  <input type="submit" name="submit" value="Create">
</form>
